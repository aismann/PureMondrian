<dialogs>

	<window id='#PB_Any' name='Settings_DE' text='Einstellungen' flags='#PB_Window_WindowCentered|#PB_Window_SystemMenu'>
		<vbox>
			<checkbox id='#Gadget_RandomOrientation' text='Lade Puzzle mit zufälliger Drehung'/>
			<checkbox id='#Gadget_NoWinAnimation' text='Keine Animation bei Sieg'/>
			<frame text='Darstellung'>
				<vbox>
					<checkbox id='#Gadget_SharpCorners' text='Keine abgerundeten Ecken'/>
					<checkbox id='#Gadget_NoGradient' text='Kein Farbverlauf'/>
					<hbox expand='item:2'>
					  <text text='Farbschema:'/>
					  <combobox id='#Gadget_ColorScheme'/>
					</hbox>
					<checkbox id='#Gadget_ThinBorders' text='Dünne Ränder'/>
				</vbox>
			</frame>
			<hbox expand='item:2'>
				<button id='#Gadget_Cancel' text=' Abbrechen '/>
				<empty/>
				<button id='#Gadget_Save' text=' Speichern '/>
			</hbox>
		</vbox>
	</window>

	<window id='#PB_Any' name='Settings_EN' text='Settings' flags='#PB_Window_WindowCentered|#PB_Window_SystemMenu'>
		<vbox>
			<checkbox id='#Gadget_RandomOrientation' text='Load puzzle with random orientation'/>
			<checkbox id='#Gadget_NoWinAnimation' text='No winning animation'/>
			<frame text='Graphics'>
				<vbox>
					<checkbox id='#Gadget_SharpCorners' text='No rounded corners'/>
					<checkbox id='#Gadget_NoGradient' text='No gradient'/>
					<hbox expand='item:2'>
					  <text text='Color Scheme:'/>
					  <combobox id='#Gadget_ColorScheme'/>
					</hbox>
					<checkbox id='#Gadget_ThinBorders' text='Thin borders'/>
				</vbox>
			</frame>
			<hbox expand='item:2'>
				<button id='#Gadget_Cancel' text=' Cancel '/>
				<empty/>
				<button id='#Gadget_Save' text=' Save '/>
			</hbox>
		</vbox>
	</window>

</dialogs>
